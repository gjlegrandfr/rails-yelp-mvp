<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @restaurant.category %></h6>
    <p class="card-text"><%= @restaurant.address %></p>
    <p class="card-text"><%= @restaurant.phone_number %></p>
  </div>
</div>
<%= link_to "Add Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
  <li class="list-group-item">
    <%= review.content %>
    <%  review.rating.times do  %>
      <i class="fas fa-star"></i>
    <% end %>
    <%  (Review::RATINGS.length - review.rating - 1).times do  %>
      <i class="far fa-star"></i>
    <% end %>
  </li>
  <% end %>
</ul>
