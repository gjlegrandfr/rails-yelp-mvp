
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path "restaurant_#{(0..5).to_a.sample}.jpeg"%>);">
  <div class="banner-content">
    <h1><%= @restaurant.name %></h1>
    <p><%= @restaurant.category %></p>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
    <%= link_to "Add Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  </div>
</div>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
  <li class="list-group-item">
    <%= review.content %>
    <div class="rating-stars">
      <%  review.rating.times do  %>
      <i class="fas fa-star"></i>
      <% end %>
      <%  (Review::RATINGS.length - review.rating - 1).times do  %>
      <i class="far fa-star"></i>
      <% end %>
    </div>
  </li>
  <% end %>
</ul>
